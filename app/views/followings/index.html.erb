<div class="row">
  <h1>Wow.</h1>
</div>

<div class="row">
  <h3>You are following <%= @following.length %> Funnlers!</h3>
  <div class="people-list">
    <% @following.each do |user| %>
    <div class="people-list__person">
      <div class="person__info">
        <p><%= user.to_s %></p>
        <p class="person__last-share">Last pick 2 days ago</p>
      </div>
    </div>
    <% end %>
  </div>
</div>

<!-- FIXME: Replace Rails magic with Backbone? -->
<div class="row">
  <h3>Such Funnlers:</h3>
  <div class="people-list">
    <% @users.each do |user| %>
      <div class="people-list__person">
        <div class="person__info">
          <p><%= user.to_s %></p>
          <p class="person__last-share">Last pick 2 days ago</p>
        </div>
        <%= button_to "Follow",
          { action: "create",
            form: { followed: user.email, email: @user.email } },
          form_class: "button--follow" %>
      </div>
    <% end %>
  </div>
</div>
